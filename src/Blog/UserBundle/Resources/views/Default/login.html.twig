{% extends 'BlogUserBundle::base.html.twig' %}
{% block title  %} Login{% endblock %}

{% block body %}
    <h1>Log in</h1>
    <div class="well col-sm-6 col-sm-offset-3">
         {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}
        
        {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label class="control-label for="username">Login :</label>
                <input class="form-control"  required type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <label class="control-label for="password">Mot de passe :</label>
                <input class="form-control"  required type="password" id="password" name="_password" />
            </div>
            <br />
            <div class="pull-right">
                <input type="submit"  class="btn btn-primary pull-right" value="Connexion" />
            </div>
        </form>
     </div>
 
{% endblock %}

